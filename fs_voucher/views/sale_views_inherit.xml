<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record model="ir.ui.view" id="sale_order_view_inherit6">
            <field name="name">sale.order.view.inherit6</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="BonCommande" />

                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="sale_order_view_inherit7">
            <field name="name">sale.order.view.inherit7</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="BonCommande" position="after">
                        <field name="NumBonCom"  attrs="{'invisible': [('BonCommande', '==',False )]}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_view_inherit5">
            <field name="name">sale.order.view.inherit5</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="NumBonCom" position="after">
                        <field name="invoice_paid" invisible='1' />
                </field>
            </field>
        </record>
</odoo>