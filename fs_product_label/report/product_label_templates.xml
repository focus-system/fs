<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="label_57x35">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <table class="table table-borderless col-xs-4">
                        <tr style="border:0;margin:0;padding:0;">
                            <td class="col-xs-4 text-center" style="border:0;margin:0;padding:0;">
                                <div style="overflow:hidden; height:45px !important; width: 90% !important; padding: 5px 5px; font-size: 15px; line-height: 1.3; margin-right: 15px; margin-left: 15px;margin-top:15px;">
                                    <span t-field="doc.name"/>
                                    
                                </div>
                                <div style="width: 100%; padding: 0; margin: 0; font-size: 15px; font-weight: bold;">
                                    <span t-field="doc.lst_price"/>
                                    <span t-field="doc.currency_id.symbol"/>
                                </div>
                                <div t-if="doc.default_code" style="width: 100%; padding: 0; margin: 0; font-size: 12px; font-weight: bold;">
                                    <span t-field="doc.default_code"/>
                                </div>
                                <img t-if="doc.barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', doc.barcode, 600, 100)" style="width:100%;height:13%;padding:3px 3px;"/>
                                <div style="font-size: 12px;"><span t-field="doc.barcode"/></div>
                            </td>
                        </tr>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
