<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_view_inherit3" model="ir.ui.view">
        <field name="name">product.template.view.inherit3</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='sale']" position="before">
            <group string="History" name="historiquePrix">
                <field name="client_ids"  nolabel="1"  widget="one2many">
                    <tree editable='bottom'>
                        <field name="client"/> 
                        <field name="price"/> 
                        <field name="currency_id"/> 
                        <field name="date"/>
                    </tree>

                </field>
            </group>
            </xpath>
        </field>
    </record>
</odoo>
